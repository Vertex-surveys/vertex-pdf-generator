    <span class="metadata-label">SURVEYOR</span>
    <span class="metadata-value"><%= data.surveyor?.name || 'Professional Surveyor' %></span>
  </div>
  <div class="metadata-card">
    <span class="metadata-label">SURVEY DATE</span>
